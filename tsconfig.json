{
    "compilerOptions": {
        "lib": ["ES2022"],
        "module": "ES2022",
        "moduleResolution": "Node",
        "target": "ES2022",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "allowJs": false,
        "esModuleInterop": true,
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "exclude": ["node_modules"],
    "typeAcquisition": {
        "enable": true,
    }
}
